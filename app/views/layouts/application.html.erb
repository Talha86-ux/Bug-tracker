    <link rel="stylesheet" href="styles.scss">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_pack_tag 'custom', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>

    <style>
        .heading {
            margin-left: 40%;

            margin-top: 25px;
            color: black !important;
            font-size: 25px;
            margin-bottom: 30px;
            font-family: Avantgarde, TeX Gyre Adventor, URW Gothic;
        }
        .heading2 {
            margin-left: 40%;


            color: black !important;
            font-size: 20px;
            margin-bottom: 30px;
            font-style: italic;
            font-family: Georgia;
        }
        .profile-head {
            transform: translateY(3rem)
        }

        .cover {
            background-image: url(https://images.unsplash.com/photo-1530305408560-82d13781b33a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1352&q=80);
            background-size: cover;
            background-repeat: no-repeat
        }
        .clr{
            color: #E5EAF5 !important;
        }
        .clr:hover{
            color: white !important;
        }
        .space{
            margin: 10px 50px 10px 15px !important;
            padding-right: 20px;
        }
        .border_btn{
            display:inline !important;
            border: none !important;
            border:0px;
            outline:0px;

        }
        body {

            margin :20px;
            padding-top: 70px;
           background-color:  #E5EAF5 !important;
            min-height: 100vh;
            overflow-x: hidden;

        }
        .layouts{
            background-color: #2C3748 !important;

        }
        .icon_color{
            color:darkslategrey
        }
        table{
            margin-left: 10px;
            margin-right: 10px;
            margin-top: 20px;
            table-layout: fixed;
            background-color: white;
            bottom: 0;
        }
        .btnn{
            margin-left: 20%;
        }
        .sp{
            color:#b02a37;
            font-weight: bold;
            font-family: "Droid Serif";
        }
        .heading2{
           font-family: "DejaVu Serif";
        }
        .tb{

            width: 30%!important;
            margin-left: 35%;
        }
        .form_text{
            font-weight: bold;
            font-family: "DejaVu Serif";
            color: darkslategrey;
        }
        .footer-basic {
            padding:30px 0;
            margin-top: 15%;
            margin-bottom: 0px;
            background-color:#ffffff;
            color:#4b4c4d;
            position: static;
            width: 100%;
        }


        .footer-basic ul {
            padding:0;
            list-style:none;
            text-align:center;
            font-size:18px;
            line-height:1.6;
            margin-bottom:0;
        }

        .footer-basic li {
            padding:0 10px;
        }

        .footer-basic ul a {
            color:inherit;
            text-decoration:none;
            opacity:0.8;
        }

        .footer-basic ul a:hover {
            opacity:1;
        }

        .footer-basic .social {
            text-align:center;
            padding-bottom:25px;
        }

        .footer-basic .social > a {
            font-size:24px;
            width:40px;
            height:40px;
            line-height:40px;
            display:inline-block;
            text-align:center;
            border-radius:50%;
            border:1px solid #ccc;
            margin:0 8px;
            color:inherit;
            opacity:0.75;
        }

        .footer-basic .social > a:hover {
            opacity:0.9;
        }

        .footer-basic .copyright {
            margin-top:15px;
            text-align:center;
            font-size:13px;
            color:#aaa;
            margin-bottom:0;
        }


    </style>
  </head>

  <body>
  <%= render"layouts/header" %>
    <%= yield %>
  <%= render "layouts/footer" %>
  </body>
</html>
