<h1 class="heading">Edit User</h1>

<%=link_to  '<i class="fa fa-angle-double-left"></i>'.html_safe, root_path, class:"space" %>

  <%= render "devise/shared/error_messages", resource: @user %>
<%= form_with model: @user, url: users_edit_user_path do |f| %>
  <div class="col-6" style="margin: 0 auto">
  <div class="field">
    <%= f.label :name, class:"form_text" %><br />
    <%= f.text_field :name, autofocus: true, class:"form-control", required:true %>
  </div>
    <br>
  <div class="field">

    <%= f.text_field :id, autofocus: true, value:params[:id], type: "hidden" %>
  </div>
  <div class="field">
    <%= f.label :email, class:"form_text" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control"%>
  </div>
<br>

  <div class="field mb-3">
    <%= f.label :role, class:"form_text" %><br/>

    <%= f.radio_button :role, 'Developer' %> Developer
    <%= f.radio_button :role, 'QA' %> QA
  </div>

    <div class="field mb-3">
      <%= f.label :employement_status %><br/>
      <%= f.select(:employement_status, User.employement_statuses.keys.map {|status| [status.titleize,status]}) %>
    </div>
<br>
  </div>


  <div style="margin-left: 10%" class="actions">
    <%= f.submit "Update", class:"btn btn-secondary" %>
  </div>

<% end %>


</div>

