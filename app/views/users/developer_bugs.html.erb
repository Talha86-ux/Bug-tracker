<h1 class="heading">My Bugs</h1>
<%=link_to  '<i class="fa fa-angle-double-left"></i>'.html_safe, projects_path, class:"space" %>
<%if user_signed_in? %>
  <%#if current_user.role == "Developer"   %>
  <table class="table table-striped table-hover">
    <thead class="thead-light ">
    <tr>
      <th>Description</th>
      <th>Deadline</th>
      <th>Bug Type</th>
      <th>Status</th>
      <th>Change Status</th>

    </tr>
    </thead>
    <tbody>
    <%#if current_user.role=="Manager" %>
    <% @bugs.each do |b| %>
      <tr>
        <td><%=b.description %></td>
        <td><%=b.deadline %></td>
        <td><%=b.bug_type %></td>
        <td><%=b.status %></td>

        <%if b.status == "Taken"  || b.status == "Active"%>
          <td><%= link_to 'View Bugs', edit_project_bug_url(id: b.id , project_id: b.project_id) %></td>
          <%else %>
           <td>___</td>
        <%end %>

      </tr>

    <% end %>
<%end %>

</tbody>
</table>

