<h1 style="margin-top: 15px" class="heading">Change Bug Status</h1>
<%=link_to  '<i class="fa fa-angle-double-left"></i>'.html_safe, projects_path, class:"space" %>



<%if user_signed_in? %>
  <%=form_for @bug, url:project_bug_path(id: @bug.id), method: :put do |f| %>
    <div class="col-6" style="margin: 0 auto">

      <div class="col-6" style="margin: 0 auto">

        <div class="field mb-3">
          <%if current_user.role == "QA" %>
          <%= f.label :status %><br/>
          <%= f.select :status, options_for_select([ "Active", "Closed" ])%>

            </div>
            <%elsif current_user.role == "Developer"%>


              <%= f.label :status %><br/>
              <%= f.select :status, options_for_select([ "Active", "Completed" ])%>

              </div>
<%end %>
        <div class="field mb-3">

          <%= f.number_field :project_id, value:params[:project_id], autofocus: true,  class:"form-control", type:"Hidden" %>
        </div>
        <%=f.submit "Update", class:"bt btn-secondary" %>

  <% end %>

</div>
<%end %>
</div>